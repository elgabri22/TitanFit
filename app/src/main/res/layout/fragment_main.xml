<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <LinearLayout
        android:id="@+id/llCalendarHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Flecha izquierda -->
        <ImageButton
            android:id="@+id/btnPreviousDay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/atras"
            android:contentDescription="Día anterior"
            app:tint="#FFB300"/>

        <!-- Día en el centro -->
        <TextView
            android:id="@+id/tvCurrentDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes 07"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Flecha derecha -->
        <ImageButton
            android:id="@+id/btnNextDay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/atras"
            android:rotation="180"
            android:contentDescription="Día siguiente"
            app:tint="#FFB300"/>
    </LinearLayout>



    <!-- Contenedor principal: indicador + detalles -->
    <LinearLayout
        android:id="@+id/llTopSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">

        <!-- Indicador circular de calorías -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cpiCalories"
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            app:indicatorSize="100dp"
            app:trackThickness="10dp"
            android:progress="25"
            app:trackColor="#E0E0E0"
            app:indicatorColor="#6200EE"/>

        <!-- Espacio horizontal entre indicador y detalles -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Detalles al lado del indicador: macros y calorías -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Label calorías -->
            <TextView
                android:id="@+id/tvCaloriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="404 / 1652 kcal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- Macronutrientes con barras -->
            <LinearLayout
                android:id="@+id/llMacros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Proteínas -->
                <TextView
                    android:id="@+id/proteinas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proteínas: 27 / 123 g"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="22"
                    android:max="100"
                    android:progressTint="#6200EE"
                    android:layout_marginBottom="8dp"/>

                <!-- Carbs -->
                <TextView
                    android:id="@+id/carbohidratos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs: 38 / 187 g"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="20"
                    android:max="100"
                    android:progressTint="#03DAC5"
                    android:layout_marginBottom="8dp"/>

                <!-- Grasas -->
                <TextView
                    android:id="@+id/grasas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grasas: 15 / 55 g"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="27"
                    android:max="100"
                    android:progressTint="#FF9800"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Sección Desayuno debajo de topSection -->
    <TextView
        android:id="@+id/tvBreakfastHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desayuno"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/llTopSection"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lista de alimentos desayuno con imagenes -->
    <LinearLayout
        android:id="@+id/llBreakfastItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBreakfastHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Huevo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huevo (entero): 2 unidades"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Pan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pan: 2 rebanadas"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Leche -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leche: 1 vaso"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/addbreakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"/>
    </LinearLayout>

    <!-- Sección Almuerzo -->
    <TextView
        android:id="@+id/tvLunchHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almuerzo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/llBreakfastItems"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lista de alimentos almuerzo con imagenes -->
    <LinearLayout
        android:id="@+id/llLunchItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLunchHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pollo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pollo: 150 g"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Quinoa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quínoa: 100 g"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Ensalada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ensalada de Verduras: ½ plato"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/addlunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
